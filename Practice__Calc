import java.awt.*;
import java.awt.event.*;
import javax.swing.*;


public class calc extends JFrame {
    private JPanel JPanel1;
    private JTextField textField1;
    private JTextField textField2;
    private JButton additionBtn;
    private JLabel answer;
    private JButton sub;
    private JButton mult;
    private JButton div;

    public calc() {
        setContentPane(JPanel1);
        setBackground(Color.LIGHT_GRAY);
        setSize(new Dimension(300, 240));
        setTitle("Calculator");
        setResizable(false);
        setVisible(true);

        setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);

        additionBtn.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int t1, t2;
                    t1 = Integer.parseInt(textField1.getText());
                    t2 = Integer.parseInt(textField2.getText());
                    answer.setText("= " + (t1 + t2));

                } catch (NumberFormatException nfe) {
                    answer.setText("Input Error!");
                }
            }
        });
        sub.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int t1, t2;
                    t1 = Integer.parseInt(textField1.getText());
                    t2 = Integer.parseInt(textField2.getText());
                    answer.setText("= " + (t1 - t2));

                } catch (NumberFormatException nfe) {
                    answer.setText("Input Error!");
                }

            }
        });
        mult.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    int t1, t2;
                    t1 = Integer.parseInt(textField1.getText());
                    t2 = Integer.parseInt(textField2.getText());
                    answer.setText("= " + (t1 * t2));

                } catch (NumberFormatException nfe) {
                    answer.setText("Input Error!");
                }

            }
        });
        div.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    double t1, t2;
                    t1 = Double.parseDouble(textField1.getText());
                    t2 = Double.parseDouble(textField2.getText());
                    answer.setText(" = " + (t1 / t2));

                } catch (NumberFormatException nfe) {
                    answer.setText("Input Error!");
                }


            }
        });
    }

    public static void main(String[] args) {
        new calc();
    }


